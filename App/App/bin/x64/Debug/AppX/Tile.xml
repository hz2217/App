<?xml version="1.0" encoding="utf-8" ?>
<tile>
  <visual branding="nameAndLogo" displayName="zeroApp">

    <binding template="TileSmall" >
      <image placement="background" src="Assets/背景.jpg" />
      <group>
        <subgroup>
          <text  hint-style="caption" hint-align="center" >我是标题</text>
          <text  hint-style="captionsubtle" hint-align="center" hint-wrap="true">我是内容</text>
        </subgroup>
      </group>
    </binding>

    <binding template="TileMedium">
      <image  placement="background" src="Assets/背景2.jpg"  />
      <group>
        <subgroup>
          <text  hint-style="caption" hint-align="center" >我是标题</text>
          <text  hint-style="captionsubtle" hint-align="center" hint-wrap="true">我是内容</text>
        </subgroup>
      </group>
    </binding>

    <binding template="TileWide"  displayName="zeroApp">
      <image placement="background" src="Assets/背景3.jpg"  />
      <group>
        <subgroup>
          <image  hint-align="stretch"  src="Assets/页面背景.jpg" />
        </subgroup>
        <subgroup>
          <text hint-style="caption" hint-align="center">我是标题</text>
          <text hint-style="captionsubtle" hint-align="center" hint-wrap="true">我是内容</text>
        </subgroup>
      </group>
    </binding>

    <binding template="TileLarge"  displayName="zeroApp">
      <image src="Assets/背景4.jpg" placement="background"/>
      <text hint-style="caption" hint-align="center">我是标题</text>
      <text hint-style="captionsubtle" hint-align="center" hint-wrap="true">我是内容</text>
    </binding>

  </visual>
</tile>